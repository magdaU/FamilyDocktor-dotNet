@model FamilyDoctor.Models.VO.MedicalIndicationVo

@{
    ViewBag.Title = "Index";
    ViewBag.Details = "Patient";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { id = Model.patientId })
</p>
<table class="table">
    <tr>
        <th>
            Important information
        </th>
        <th>
           Frequency
        </th>
        <th>
            Start date
        </th>
        <th>
            End date
        </th>
        <th>
            Drug
        </th>
        <th>
            Medical advice
        </th>
        <th>
            Dosage
        </th>
            
    </tr>

@foreach (var item in Model.MedicalIndication) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ImportantInformation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Frequency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Drug)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MedicalAdvice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dosage)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.ID, id2 = Model.patientId }) |
            @Html.ActionLink("Details", "Details", new { id = item.ID, id2 = Model.patientId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ID, id2 = Model.patientId })
        </td>
    </tr>
}

</table>
